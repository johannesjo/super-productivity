{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom"]
  },
  "include": ["main.ts", "**/*.ts"],
  "exclude": ["../node_modules", "**/*.spec.ts"]
}
