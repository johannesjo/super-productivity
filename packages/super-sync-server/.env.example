# SuperSync Server Configuration
# Copy this file to .env and customize the values

# Server port (default: 1900)
PORT=1900

# Data directory for storing sync files (default: ./data)
DATA_DIR=./data

# User credentials (format: "username:password,username2:password2:admin")
# The ":admin" suffix grants administrative privileges
# REQUIRED: At least one user must be configured
USERS=admin:changeme:admin

# CORS Configuration
# Enable/disable CORS (default: true)
CORS_ENABLED=true

# Allowed CORS origins (comma-separated, default: *)
# Use "*" to allow all origins, or specify domains like "https://example.com"
CORS_ORIGINS=*
